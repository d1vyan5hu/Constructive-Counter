{
  "name": "traffic-clicker",
  "version": "1.0.0",
  "description": "An Electron application for video traffic counting with OCR timestamp recognition",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:dmg": "electron-builder --mac dmg",
    "build:mac:unsigned": "electron-builder --mac dmg --config.mac.identity=null",
    "dist": "npm run build:mac:dmg"
  },
  "dependencies": {
    "electron": "^39.0.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.trafficclicker.app",
    "productName": "TrafficClicker",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!screenshots/**/*",
      "!app-logs.txt",
      "!*.md",
      "!build/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "eng.traineddata"
    ],
    "extraResources": [
      {
        "from": "eng.traineddata",
        "to": "eng.traineddata"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  }
}

